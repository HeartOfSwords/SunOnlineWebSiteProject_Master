<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>SunOnlineWebSiteProject_Master</display-name>
  <welcome-file-list>
  <welcome-file>IndexRouter</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <description>后台服务配置</description>
    <servlet-name>webservice</servlet-name>
    <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>jersey.config.server.provider.packages</param-name>
      <param-value>com.sunonline.web.webapi</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>webservice</servlet-name>
    <url-pattern>/webapi/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>管理员登录路由</description>
    <display-name>AdminLoginPageRouter</display-name>
    <servlet-name>AdminLoginPageRouter</servlet-name>
    <servlet-class>com.sunonline.web.admin.service.AdminLoginPageRouter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminLoginPageRouter</servlet-name>
    <url-pattern>/admin/adminlogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>管理员登录验证Servlet</description>
    <display-name>AdminLoginVerifyServlet</display-name>
    <servlet-name>AdminLoginVerifyServlet</servlet-name>
    <servlet-class>com.sunonline.web.admin.service.AdminLoginVerifyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminLoginVerifyServlet</servlet-name>
    <url-pattern>/admin/adminloginverify</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>管理员注销登录Servlet</description>
    <display-name>AdminLogoutServlet</display-name>
    <servlet-name>AdminLogoutServlet</servlet-name>
    <servlet-class>com.sunonline.web.admin.service.AdminLogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminLogoutServlet</servlet-name>
    <url-pattern>/admin/adminlogout</url-pattern>
  </servlet-mapping>
  <filter>
    <description>管理员会话过滤器</description>
    <display-name>AdminSessionCheckFilter</display-name>
    <filter-name>AdminSessionCheckFilter</filter-name>
    <filter-class>com.sunonline.web.filters.AdminSessionCheckFilter</filter-class>
    <init-param>
      <description>管理员登录页</description>
      <param-name>adminLoginPage</param-name>
      <param-value>/admin/login.jsp</param-value>
    </init-param>
    <init-param>
      <description>管理员登录验证Servlet</description>
      <param-name>adminLoginVerifyServlet</param-name>
      <param-value>AdminLoginVerifyServlet</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AdminSessionCheckFilter</filter-name>
    <url-pattern>/WEB-INF/jsp/admin/index.jsp</url-pattern>
  </filter-mapping>
  <servlet>
    <description>Higo大学季分页重定向二级页面</description>
    <display-name>HigoVideoPager</display-name>
    <servlet-name>HigoVideoPager</servlet-name>
    <servlet-class>com.sunonline.web.service.higo.HigoVideoPager</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HigoVideoPager</servlet-name>
    <url-pattern>/HigoPager</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>Higo大学季播放页三级页面</description>
    <display-name>HigoVideoPlayPage</display-name>
    <servlet-name>HigoVideoPlayPage</servlet-name>
    <servlet-class>com.sunonline.web.service.higo.HigoVideoPlayPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>HigoVideoPlayPage</servlet-name>
    <url-pattern>/HigoVideoPlayPage</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>影视老司机分页重定向二级页面</description>
    <display-name>OldDriverVideoPager</display-name>
    <servlet-name>OldDriverVideoPager</servlet-name>
    <servlet-class>com.sunonline.web.service.olddriver.OldDriverVideoPager</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OldDriverVideoPager</servlet-name>
    <url-pattern>/OldDriverPager</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>影视老司机播放页三级页面</description>
    <display-name>OldDriverVideoPlayPage</display-name>
    <servlet-name>OldDriverVideoPlayPage</servlet-name>
    <servlet-class>com.sunonline.web.service.olddriver.OldDriverVideoPlayPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OldDriverVideoPlayPage</servlet-name>
    <url-pattern>/OldDriverVideoPlayPage</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>最强音播放页二级页面</description>
    <display-name>CollegeVoiceVideoPager</display-name>
    <servlet-name>CollegeVoiceVideoPager</servlet-name>
    <servlet-class>com.sunonline.web.service.collegevoice.CollegeVoiceVideoPager</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CollegeVoiceVideoPager</servlet-name>
    <url-pattern>/CollegeVoiceVideoPager</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>最强音播放页三级页面</description>
    <display-name>CollegeVoiceVideoPlayPage</display-name>
    <servlet-name>CollegeVoiceVideoPlayPage</servlet-name>
    <servlet-class>com.sunonline.web.service.collegevoice.CollegeVoiceVideoPlayPage</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CollegeVoiceVideoPlayPage</servlet-name>
    <url-pattern>/CollegeVoiceVideoPlayPage</url-pattern>
  </servlet-mapping>
  <servlet>
    <description>首页路由</description>
    <display-name>IndexRouter</display-name>
    <servlet-name>IndexRouter</servlet-name>
    <servlet-class>com.sunonline.web.service.index.IndexRouter</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IndexRouter</servlet-name>
    <url-pattern>/IndexRouter</url-pattern>
  </servlet-mapping>
</web-app>